      <form action="/admin/addcoupon" method="post">
      <div class="col-12 d-flex justify-content-between">
        <h4>Add Coupons</h4>    </div>
      <div class="col-12 mt-3">  
        <div class="row">
          <div class="col-3"><span>Coupon Code </span> </div>
          <div class="col-8"> : <input type="text" oninput="codeinput()" placeholder="Coupon" required name="coupon" id="coupon-input"> <span id="coupon-err" class="couponerr"></span ></div>
        </div> 
            
      </div>
      <div class="col-12 mt-3">
        <div class="row">
          <div class="col-3"> <span>Discount ( % ) </span></div>
          <div class="col-8"> : <input min="1" max="99" oninput="discountinput ()" type="number" required placeholder="discount (%)" name="discount" id="dis-input"><span id="discount-err" class="couponerr"></span></div>
        </div> 
         
      </div>  
      <div class="col-12 mt-3">
        <div class="row">
          <div class="col-3"><span>Minimum purchace  </span> </div>
          <div class="col-8"> : <input min="1"  type="number" required placeholder="Minimum Purchace" name="minPurchase" id=""><span id="" class="couponerr"></span></div>
        </div> 
        
     </div>  
      <div class="col-12 mt-3">
        <div class="row">
          <div class="col-3"> <span>Expire date </span></div>
          <div class="col-8"> : <input min="1" max="99"  type="date" placeholder="Expire date" required name="date" id="dis-input"><span id="expireDate" class="couponerr"></span></div>
        </div> 
        
     </div> 
        <div class="col-12 mt-3">
         
          <button id="sub-btn">Submit</button>
        </div>
       
        
      </form>
