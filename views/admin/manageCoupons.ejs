     <% } else{%>
      <div class="col-12 p-3 my3 mt-3"><h4 class="pb-2">No Coupons</h4></div>
      <% } %>
     <% if (coupons) { %>
      <% coupons.forEach(element => { %>
      <div class="row mb-2 showCoup">
      
       
          <div class="col-3 d-flex align-items-center justify-content-start ps-3  mb-3"><h6 class="pt-3"><%= element.coupon %></h6> </div>
          <div class="col-5  d-flex align-items-center justify-content-start mb-3"><h6 class="pt-3"><%= element.discount %>% Discount
          <% if (element.expireDate) { %>
              <% if (element.expireDate <= currentDate) { %>
               (expired)
              <% }else {%>
                <% 
                const dateObject = new Date(element.expireDate);
                const day = dateObject.getDate().toString().padStart(2, '0');  // Get the day (with zero padding)
                const month = (dateObject.getMonth() + 1).toString().padStart(2, '0');  // Get the month (adding 1 because months are zero-based)
                const year = dateObject.getFullYear();  // Get the year
              
                const formattedDate = `${day}-${month}-${year}`;
                %>
                (Expire in <%= formattedDate %>)
              <% } %>
          <% } %>
          </h6></div> 
          <div class="col-3  d-flex align-items-center justify-content-start mb-3 mb-3"><h6 class="pt-3">Min Purchase â‚¹<%= element.minPurchase %></h6></div> 
          <div class="col-1  d-flex align-items-center justify-content-start mb-3 mb-3"><h6 class="pt-3"><a href="/admin/deleteCoupon/<%= element._id %>">Delete</a></h6></div> 

 
        </div>
        <% }) %>
