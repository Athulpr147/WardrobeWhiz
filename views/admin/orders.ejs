          <div class="card-body row ms-1" id="view-all-orders">   <!--main card  ------------------------------------->
                  <% allOrders.forEach(element => { %>
                    <a href="/admin/showOrder/<%= element._id %>"><div class="row mb-4 " style="background-color: white;">
                        <div class="col-6 p-4">
                            
                        <!-- Product card -->
            
                            <% element.products.forEach(products => { %>
                                <div class="row mb-2">
                                    <div class="col-3 d-flex  justify-content-center" style="align-items: center;">
                                        <div style="width: 100px; height: 100px;""><img style="height: 100%; width: 100%; object-fit: cover;" src="/uploads/<%= products.productId.image[0] %>" alt=""></div>
                                    </div>
                                    <div class="col-9">
                                        <div class="row">
                                            <div class="col-12"><span class="t-bolde"><%= products.productId.name %></span></div>
                                
                
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
            
                            <!-- Product card end -->
            
            
                        </div>
                        
                        <!-- Pricce details -->
                        <div class="col-2 pt-4"><%= element.userId.name %></div>
                        <% if (element.status == 'Canceled') { %>
                          <div class="col-2 pt-4"><span style="background-color: red; padding: 2px 10px; border-radius: 10px; color: white; font-weight: 600;"><%= element.status %></span></div>
                        <% }else if(element.status =='Pending') {%>
                          <div class="col-2 pt-4"><span style="background-color: orange; padding: 2px 10px; border-radius: 10px; color: white; font-weight: 600;"><%= element.status %></span></div>
                          <% }else{ %>
                            <div class="col-2 pt-4"><span style="background-color: blueviolet; padding: 2px 10px; border-radius: 10px; color: white; font-weight: 600;"><%= element.status %></span></div>

                            <% } %>
                        <div class="col-2 pt-4">₹<%= element.finalPrice %>.00</div>
            
